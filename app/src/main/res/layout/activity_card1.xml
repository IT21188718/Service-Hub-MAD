<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_payment_button_text"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayoutVisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnPay"
            android:layout_width="379dp"
            android:layout_height="60dp"
            android:drawableStart="@drawable/visa_logo"
            android:text="@string/visa_radio_button_text"
            android:textAllCaps="false"
            android:textSize="19sp" />


    </LinearLayout>

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayoutVisa"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/linearLayoutMastercard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSeparator"
        android:layout_marginTop="0dp"
        android:gravity="center"

        >


        <Button
            android:id="@+id/btnPay2"
            android:layout_width="379dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/mastercard_logo"
            android:text="@string/mastercard_radio_button_text"
            android:textAllCaps="false"
            android:textSize="19sp"
            tools:ignore="RtlHardcoded" />


    </LinearLayout>



</RelativeLayout>
